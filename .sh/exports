#!/bin/sh
export ENV="$HOME/.sh/rc"

export PATH="$HOME/bin:$HOME/.local/bin:$PATH"

export LANG=C.UTF-8

# Rust
[ -f "$HOME/.cargo/env" ] && \. "$HOME/.cargo/env"

# NodeJS Version Manager
export NVM_DIR="$HOME/.nvm"

export HISTSIZE=$((1 << 16))
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoreboth:erasedups

export PAGER='less -S'

# Helix
export EDITOR=hx VISUAL=hx

# NodeJS
export NODE_REPL_HISTORY_SIZE="$((HISTSIZE >> 4))"
export NODE_REPL_MODE=strict

export TAPLO_CONFIG="$HOME/.config/taplo.toml"

export __RXDF_EXPORTED=1
